{
  "name": "figma-token-sync",
  "version": "0.1.0",
  "description": "Bidirectional sync between Figma Variables and GitHub-hosted Style Dictionary tokens",
  "scripts": {
    "build": "npm run build:plugin && npm run build:ui",
    "build:plugin": "BUILD_MODE=plugin vite build",
    "build:ui": "vite build",
    "dev": "npm run build && npm run dev:ui",
    "dev:ui": "vite build --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.90.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-singlefile": "^2.0.1"
  }
}
